<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Patient Portal</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span><Icon class="ps-1 pe-1" Name="IconName.House" />Home</span>
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link collapsed" href="#" @onclick="() => expandConfig = !expandConfig">
                <span><Icon class="ps-1 pe-1" Name="IconName.Grid" />Config</span>
            </NavLink>
            @if (expandConfig)
            {
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="location-grid">
                        <span ><Icon class="ps-1 pe-1" Name="IconName.Alarm" />Locations</span>
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="user-grid">
                        <span><Icon class="ps-1 pe-1" Name="IconName.Person" />Users</span>
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="doctor-grid">
                        <span><Icon class="ps-1 pe-1" Name="IconName.HeartPulse" />Doctors</span>
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="patient-grid">
                        <span><Icon class="ps-1 pe-1" Name="IconName.PersonAdd" />Patient</span>
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="slot-grid">
                        <span><Icon class="ps-1 pe-1" Name="IconName.Alarm" />Slots</span>
                    </NavLink>
                </div>
            }
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="booking-grid">
                <span><Icon class="ps-1 pe-1" Name="IconName.Book" />Booking Service</span>
            </NavLink>
        </div>
@*         <div class="nav-item px-3">
            <NavLink class="nav-link" href="claims-principle-data">
                <span class="oi oi-list-rich" aria-hidden="true"></span>Claims Principal Data
            </NavLink>
        </div> *@
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;
    private bool expandConfig = false;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
